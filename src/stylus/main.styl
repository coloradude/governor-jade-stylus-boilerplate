  width 435px
  height 300px
  
.frame-1, .frame-2, .frame-3
  display flex
  flex-direction column
  align-items center
  position absolute
  top 0
  left 0
  
.frame-1
  opacity 1

.frame-2, .frame-3
  opacity 0

.frame-2 .relative
