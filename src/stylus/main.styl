// Variables

$pink = #d81767
$teal = #54C2BD
$purple = #210e2d
$grey1 = #f7f7f9 
$grey2 = #98949e
$standardWidth = 1400px

// Base Styles
*
  font-family 'Open Sans'
  outline none
  box-sizing border-box

h1
  line-height 1.25
  font-size 1.7em
  font-weight 400
  -webkit-margin-before 0
  -webkit-margin-after 0

p, li
  font-weight 300
  font-size 1.1em
  line-height 1.9

// Utility Classes

.full-width
  width 100%
  display flex
  justify-content center

.section-wrapper
  width 100%
  max-width 1400px

.pink
  color $pink
  
.teal
  color $teal
  
.white
  color #FFF
  
.white-bg
  background-color #FFF
  
.grey-bg
  background-color $grey1

.teal-bg
  background-color $teal

.purple-bg
  background-color $purple

.pink-bg
  background-color $pink
  
.relative
  position relative
  
.invisible
  opacity 0
  
.actually-invisible
  visibility hidden

.actually-visible
  visibility visible

.hidden
  display none !important
  
// Animations

.fade-in
  animation fade-in .4s .4s forwards

.fade-out
  animation fade-out .4s forwards
  
@keyframes fade-in
  from
    opacity 0
  to
    opacity 1
    
@keyframes fade-out
  from
    opacity 1
  to
    opacity 0
    display none
  
 
// Hero
.hero
  display flex
  flex-direction column
  align-items center

  z-index -1
  
.hero-laptop
  margin-top 125px

.hero-headline
  max-width 800px
  text-align center
  
.hero-subtext
  color $grey2
  
.scroll-to-footer
  width 310px
  height 50px
  color #FFF
  margin-top 35px
  font-size 16px
  border none
  margin-bottom 90px
  
.hero-placeholder
  height 1000px
  z-index -2

// Callouts

.callout-container
  width 100%
  display flex
  justify-content center

.callout-wrapper
  max-width $standardWidth
  width 100%
  display flex
  justify-content center
  align-items center
  margin 65px 0

.img-area
  width 55%

.callout-heading
  width 45%
  
.img-area img
  width 100%
  
.img-left
  text-align right
  img
    padding-left 50px

.img-right
  text-align left
  img
    padding-right 50px

.callout-headline
  display flex
  flex-direction column
  justify-content center
  padding 0 50px

// .std-padding-left
//   padding-left 100px

.callout-header
  margin-bottom 20px

.callout-subtext
  margin-top 0
  color $grey2
  max-width 475px
  
// Info Section

.info-section
  display flex
  justify-content center

.info-main
  padding 100px 50px 0 50px
  max-width $standardWidth
  width 100%

.info-subtext
  max-width 45%
  margin-bottom 0
  font-size 1.1rem

.info-continued
  margin-top 0

.desktop
  width 45vw
  position absolute
  top -428%
  right 5%

.text-bottom
  display flex
  justify-content flex-start
  
.benefits
  display flex
  align-content flex-start
  flex-wrap wrap
  width 50%
  li
    display flex
    justify-content flex-start
    align-items center
    width 50%
    height 100px

// Logos

.logos
  width 100%
  height 230px
  display flex
  justify-content center
  align-items center
  padding-top 160px
  
.logos .logo
  width 100%
  
.logos-wrapper
  width 100%
  display flex
  justify-content center

// Features

.features-wrapper
  display flex
  justify-content center
  align-items center
  margin 170px 0
  
.features-group
  display flex
  flex-direction column
  align-items flex-start

.features-headline
  display flex
  flex-direction column
  align-items flex-start
  
.features
  display flex
  align-content flex-start
  flex-wrap wrap
  width 100%
  li
    display flex
    justify-content flex-start
    align-items center
    width 50%
    height 100px

//Footer 

footer
  background-color #1c0b2a

.cta-container
  width 100%
  display flex
  justify-content center

.cta-wrapper
  width 43%
  display flex
  flex-direction column
  margin 175px 0
  .cta-header, .cta-subtext
    text-align center
  .cta-header
    something nothing
  .cta-subtext
    color #FFF
    
.sign-up-container
  height 100vh
  width 100%
  display flex
  justify-content center
  align-items center
  color #FFF

.sign-up-wrapper
