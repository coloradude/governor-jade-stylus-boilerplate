//   padding-left 100px

.callout-header
  margin-bottom 20px

.callout-subtext
  margin-top 0
  color $grey2
  max-width 475px
  
// Benefits Section



.benefits
  display flex
  justify-content center
  background linear-gradient(to right, $ltGreen 0%, $ltBlue 100%)

.benefits-main
  padding 100px 50px 0 50px
  max-width $standardWidth
  width 100%

.benefits-subtext
  max-width 45%
  margin-bottom 0
  font-size 1.1rem

.info-continued
  margin-top 0

.desktop
  width 45vw
  position absolute
  top -428%
  right 5%

.text-bottom
  display flex
  justify-content flex-start
  
.benefits-list
  display flex
  align-content flex-start
  flex-wrap wrap
  width 50%
  li
    display flex
    justify-content flex-start
    align-items center
    width 50%
    height 100px

// Logos

.logos
  width 100%
  height 230px
  display flex
  justify-content center
  align-items center
  
.logos .logo
  width 100%
  
.logos-wrapper
  width 100%
  display flex
  justify-content center

// Features

.features-wrapper
  display flex
  justify-content center
  align-items center
  margin 170px 0
  
.features-group
  display flex
  flex-direction column
  align-items flex-start

.features-subtext
  text-align right

.features-headline
  display flex
  flex-direction column
  align-items flex-end
  
.features
  display flex
  align-content flex-start
  flex-wrap wrap
  width 100%
  li
    display flex
    justify-content flex-end
    align-items center
    width 50%
    height 100px

//Footer 

.cta-container
  width 100%
  display flex
  justify-content center
  
.background-slider
  top 0
  left 0
  width 300vw
  height 100vh
  z-index -1
  transform translateX(0) 
  background linear-gradient(to right, $ltGreen 0%, $ltBlue 33.3333%, $red 66.6666%, $yellow 100%)

.cta-wrapper
  width 43%
  display flex
  flex-direction column
  margin 175px 0
  .cta-header, .cta-subtext
    text-align center
    
.sign-up-container
  height 100vh
  width 100%
  display flex
  justify-content center
  align-items center
  color #FFF

.sign-up-wrapper
  position relative
  width 435px
  height 300px
  
.frame-1, .frame-2, .frame-3
  display flex
  flex-direction column
  align-items center
  position absolute
  top 0
  left 0
  
.frame-1
  opacity 1
  
.email-error
  position absolute
  top -15px

.frame-2, .frame-3
  opacity 0

.frame-2 .username-wrapper
  display flex
  align-items center

.check-icon, .x-icon
  width 25px
  position absolute
  top 20px
  right 0
  
.check-icon *
  fill $green
.x-icon *
  fill $red

.at
  positon absolute

.early-access-input
  width 350px
  background-color transparent
  border none
  padding 20px
  font-size 20px
  color #FFF
  text-align center
